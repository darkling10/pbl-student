<body>



  <div class="container">
    <div class="row justify-content-center">
      <div class="col-md-9 col-lg-12 col-xl-10 mt-5">
        <div class="card shadow-lg o-hidden border-0 my-5">
          <div class="card-body p-0">
            <div class="row justify-content-center">

              <div class="col-lg-6">
                <div class="p-5 shadow-lg  bg-white rounded">
                  <div class="text-center">
                    <h4 class="text-dark mb-4">Enter Student</h4>
                  </div>
                  <form class="user" method="post" action="/attendance">

                    <div class="mb-3">

                      <input style="margin-bottom: 16px;" class="form-control border-secondary" name="name" id="name"
                        type="text" name="name" id="" placeholder="Student Name">
                
                      <br>
                      <input class="form-control form-control-user bor border-secondary" placeholder="Roll Number "
                        type="text" id="rollno" name="rollno">

                      <br>
                      <input class="form-control form-control-user bor border-secondary" placeholder="Username "
                        type="text" id="username" name="username">
                      
                      <br>
                      <input class="form-control form-control-user bor border-secondary" placeholder="PRN Number "
                        type="text" id="prn" name="prn">

                      <br>
                        <input class="form-control form-control-user bor border-secondary" placeholder="Password "
                        type="password" id="password" name="password">  
                      
                        <br>
                        <input class="form-control form-control-user bor border-secondary" placeholder="Confirm Password "
                        type="confirmpassword" id="confirmpassword" name="confirmpassword">  
                    </div>


                    <button class="btn btn-primary d-block btn-user w-100" type="submit submit">Add Student</button>

                  </form>

                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>


